<div class="container">
<h1>Your Profile</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
			<th>id</th>
    </tr>
  </thead>
  <% cache current_user do %>
  <tbody>
  	<% if current_user %>
      <td><%= current_user.name %></td>
      <td><%= current_user.email %></td>
			<td><%= current_user.id %></td>
    <% end %>
  </tbody>
  <% end %>
</table>

<table class="table">
  <thead>
    <tr>
      <th>Pickup Id</th>
      <th>Pickup Name</th>
      <th>Pickup Photo</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
<!-- 		<% @pickups = Pickup.page params[:page] %>
 -->    <% @paginatable_pickups.each do |pickup| %>
        <% cache pickup do%>

          <tr>
            <td><%= pickup.user_id %></td>
            <td><%= pickup.name %></td>
            <td><%= pickup.image_url %></td>
            <td>
              <%= pickup.price %></td>
            </td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

</div>

<div class="center">
     <%= paginate @paginatable_pickups %> 
</div>

