<%= bootstrap_form_for(@pickup) do |f| %>

  <% if @pickup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pickup.errors.count, "error") %> prohibited this pickup from being saved:</h2>

      <ul>
      <% @pickup.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h1><%= current_user.name %></h1>
    <%= f.hidden_field :uid, required: true, class: 'form-control', value:current_user.id  %>
  </div>
  <div class="field">
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.text_field :long %>
  </div>
  <div class="field">
    <%= f.text_field :lat %>
  </div>

  <div id="multi_markers" style='height: 120px;'></div>
  <br>
  <script>
  var handler = Gmaps.build('Google');
  handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
    var markers = handler.addMarkers([
        { Lat: Gmaps.map.userLocation.lat(), Lng: Gmaps.map.userLocation.lng() }
   ]);
   handler.bounds.extendWith(markers);
   handler.fitMapToBounds();
  });
 </script>
  <div class="field">
    <%= f.number_field :obj_type %>
  </div>
  <div class="field">
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.date_select :start_time %>
  </div>
  <div class="field">
    <%= f.date_select :end_time %>
  </div>
  <div class="field">
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
