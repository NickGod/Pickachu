<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.5.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="ec2-52-33-230-24.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="5" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="10" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>
  <!-- Sign Up new users test -->

  <session name="sign_up" weight="10" type="ts_http">
    <!-- repeat step [1] 10 times -->
      <for from="1" to="10" incr="1" var="counter">

      <request>
      <dyn_variable name="authenticity_token" ></dyn_variable>
        <http url="/users/sign_up" version="1.1" method="GET"></http>
      </request>

      <setdynvars sourcetype="random_number" start="1" end="10">
        <var name="random_user_num"/>
      </setdynvars>

      <thinktime value="2" random="true"></thinktime>

      <if var="authenticity_token" neq="">
      <request subst="true">
        <http
          url="/users/sign_up"
          method="POST"
          version="1.1"
          contents="utf8=%E2%9C%93&amp;authenticity_token=%%_authenticity_token%%&amp;name=user%%_random_user_num%%&amp;email=user%%_random_user_num%%@test.com&amp;password=12345678&amp;password_confirmation=12345678&amp;"
          content_type="application/x-www-form-urlencoded"/>
        </http>
      </request>

      <thinktime value="2" random="true"></thinktime>
      </if>
      </for>

  </session>
</tsung>
