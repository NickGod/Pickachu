<?xml version="1.0"?><tsung loglevel="notice" version="1.5.0">

  <clients>
    <client host="localhost" use_controller_vm="true" maxusers="15000"/>
  </clients>

  <servers>
    <server host="ec2-52-33-183-220.us-west-2.compute.amazonaws.com" port="80" type="tcp"/>
  </servers>

  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="2" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="10" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="30" unit="second"/>
    </arrivalphase>
  </load>

  <options>
    <option name="global_ack_timeout" value="2000"/>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-test" probability="100" type="ts_http">
      <setdynvars sourcetype="random_number" start="1" end="5000">
        <var name="random_user_num"/>
      </setdynvars>

      <request>
        <http url="/users/sign_in" version="1.1" method="GET"/>
      </request>

      <thinktime value="2" random="true"/>

      <request subst="true">
        <http url="/users/sign_in" version="1.1" contents="utf8=%E2%9C%93&amp;user%5Bemail=user%_random_user_num%@test.com&amp;user%5Bpassword=12345678&amp;commit=Log+in" content_type="application/x-www-form-urlencoded" method="POST">
        </http>
      </request>

      <thinktime value="2" random="true"/>

      <request>
        <http url="/users/sign_out" version="1.1" method="DELETE"/>
      </request>

    </session>
  </sessions>
</tsung>
